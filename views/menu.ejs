<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu - Our Delicious Offerings</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 font-sans w-full flex flex-col items-center justify-center min-h-screen">

  <!-- Navbar -->
  <div class="bg-red-600 text-white shadow-lg w-full py-4">
    <nav class="max-w-4xl mx-auto text-center">
      <% if (user) { %>
        <span class="text-white text-xl mx-4">Welcome, <%= user.username[0].toUpperCase() %></span>
        <a href="/auth/logout" class="text-white text-xl mx-4 hover:underline transition duration-300">Logout</a>
      <% } else { %>
        <a href="/login" class="text-white text-xl mx-4 hover:underline transition duration-300">Login</a>
        <a href="/register" class="text-white text-xl mx-4 hover:underline transition duration-300">Register</a>
      <% } %>
      <a href="/" class="text-white text-xl mx-4 hover:underline transition duration-300">Home</a>
      <a href="/about" class="text-white text-xl mx-4 hover:underline transition duration-300">About</a>
      <a href="/search" class="text-white text-xl mx-4 hover:underline transition duration-300">Search</a>
      <a href="/menu" class="text-white text-xl mx-4 hover:underline transition duration-300">Menu</a>
    </nav>
  </div>

  <!-- Main Image -->
  <div class="w-full mt-6 mb-12">
    <img src="https://www.foodiesfeed.com/wp-content/uploads/2023/06/burger-with-melted-cheese.jpg" alt="Main image"
      class="w-full h-96 object-cover rounded-lg">
  </div>

  <!-- Menu Page (Products Section) -->
  <div id="menu-container" class="w-full max-w-6xl px-4">
    <h2 class="text-3xl font-bold mb-6 text-center">Our Menu</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Dynamically render the cards for each fast food item -->
      <% fastFoods.forEach((food) => { %>
        <div class="card bg-white shadow-md rounded-lg p-4">
          <img src="<%= food.image %>" alt="<%= food.title %>" class="w-full h-56 object-cover rounded-lg mb-4">
          <h3 class="text-xl font-semibold mb-2"><%= food.title %></h3>
          <p class="text-gray-600 mb-4"><%= food.content %></p>
          <p class="text-gray-900 font-semibold">$<%= food.price %></p>
        </div>
      <% }) %>
    </div>
  </div>

</body>

</html>
